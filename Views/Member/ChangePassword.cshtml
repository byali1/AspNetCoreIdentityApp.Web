@{
    ViewData["Title"] = "Şifre Değiştir";
}

@model PasswordChangeViewModel

<div class="row d-flex justify-content-center mt-4">

    <div class="col-md-5">


        <div class="text-center my-4"><h1 class="fw-normal">Şifre Değiştir</h1></div>


        <div asp-validation-summary="ModelOnly" class="alert alert-warning alert-dismissible fade show d-flex align-items-center mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-2"></i>
            <span class="ms-4">
            </span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <form asp-controller="Member" asp-action="ChangePassword" method="post">

            <div class="row mb-4">
                <label for="OldPassword" class="col-sm-2 col-form-label" asp-for="OldPassword"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="OldPassword" required>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-4">
                <label for="NewPassword" class="col-sm-2 col-form-label" asp-for="NewPassword"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="NewPassword" required>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-4">
                <label for="ConfirmPassword" class="col-sm-2 col-form-label" asp-for="ConfirmPassword"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="ui orange button">Güncelle</button>
            </div>

        </form>

    </div>
</div>


@* ClientSide V.  *@

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}