
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

@model ForgotMyPasswordViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center mb-4 fw-normal mt-4">Şifremi unuttum</h2>
        
        @if (TempData["UserFound"] as bool? ?? false) 
        {
            <div class="ui info message">
                <i class="close icon"></i>
                <div class="header">
                    Harika!
                </div>
                <div class="mt-2">
                    <p>Şifre sıfırlama bağlantısı e-mail adresinize gönderildi!</p>
                </div>
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger alert-dismissible fade show" role="alert">

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <form class="border p-4 rounded-1" asp-controller="Home" asp-action="ForgotMyPassword" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" required>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
           
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Gönder</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



