@{
    ViewData["Title"] = "Şifre Güncelle";

}
@model ResetPasswordViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center mb-4 mt-4">Şifre Güncelle</h2>

        @if (TempData["isPasswordUpdated"] as bool? ?? false)
        {
            <div class="ui success message">
                <i class="close icon"></i>
                <div class="header">
                    Harika!
                </div>
                <div class="mt-2">
                    <p>Şifreniz başarıyla değiştirildi.</p>
                </div>
            </div>
        } 

        <div asp-validation-summary=ModelOnly class="alert alert-danger alert-dismissible fade show" role="alert">

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <form class="border p-4 rounded-1" asp-controller="Home" asp-action="ResetPassword" method="post">
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input  type="password" class="form-control" asp-for="Password" required>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="PasswordConfirmed"></label>
                <input type="password" class="form-control" asp-for="PasswordConfirmed" required>
                <span class="text-danger" asp-validation-for="PasswordConfirmed"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="ui yellow button">Güncelle</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}